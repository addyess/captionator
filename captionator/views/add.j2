{% extends "base.html" %}
{% block title %}Captionator - Add{% endblock %}
{% block head %}
    {{ super() }}
{% endblock %}
{% block content %}
    <div class="container-fluid display-4" >
        <form>
            <div class="bg-light p-5 display-1">
                Captionator - Add
            </div>
            <div id="captions">
                  <div class="mb-3">
                    <label for="InputName" class="form-label">Name</label>
                    <input class="form-control form-control-lg" id="InputName" name="name" required>
                  </div>
                  <div class="mb-3">
                    <label for="InputLocation" class="form-label">Location</label>
                    <input class="form-control form-control-lg" id="InputLocation" name="location" required>
                  </div>
                  <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdown-caption-input" data-bs-toggle="dropdown" aria-expanded="false">
                      Caption Input Method
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="caption-input">
                      <li><a class="dropdown-item" href="#">By Text</a></li>
                      <li><a class="dropdown-item" href="#">By Image</a></li>
                    </ul>
                  </div>

                  <div>
                      <div class="mb-3 d-none" id="caption-images">
                        <label class="form-label">Scan</label>
                        <input type="file" access="image/*"
                               class="form-control form-control-lg"
                               name="image"
                               capture="camera">
                      </div>
                      <div class="mb-3 d-none" id="caption-text">
                        <label for="InputText" class="form-label">Text</label>
                        <textarea class="form-control form-control-lg"
                                  id="InputText" name="text"
                                  style="height: 750px"></textarea>
                      </div>
                  </div>
            </div>
            <div class="row">
                <div class="btn-group" role="group" aria-label="Navigation">
                  <button id="btn-cancel" class="btn btn-secondary">Cancel</button>
                  <button id="btn-add" class="btn btn-primary" type="submit">
                      Add
                      <span class="spinner-border text-primary d-none" role="status">
                          <span class="sr-only">Submitting...</span>
                      </span>
                  </button>
                </div>
            </div>
        </form>
    </div>
    <script src="/js/add.js"></script>
{% endblock %}
